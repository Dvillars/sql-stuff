@{
    Layout = "Shared/_Layout.cshtml";
}


<form action="/release" method="post">
    @foreach(var pokemon in Model)
    {
        <p>
            <input type="checkbox" id="@pokemon.GetNick()" value="@pokemon.GetNick()" name="pokemon">
            <label for="@pokemon.GetNick()">@pokemon.GetDex() @pokemon.GetName() @pokemon.GetNick() @pokemon.GetLv()</label>
        </p>
    }
    <button type="submit" name="button" class="btn">Release Selected Pokemon</button>
</form>
